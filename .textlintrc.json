{
  "filters": {
    "comments": true
  },
  "plugins": {
    "html": {
      "extensions": [
        ".php"
      ]
    }
  },
  "rules": {
    "preset-japanese": true,
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "prh": {
      "rulePaths": [
        "node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml"
      ]
    }
  }
}