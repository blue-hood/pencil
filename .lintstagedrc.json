{
  "!(*.blade).php": [
    "prettier --write",
    "git add"
  ],
  "*.{js,jsx,ts,tsx}": [
    "prettier --write",
    "eslint --fix --max-warnings 0",
    "git add"
  ],
  "*.{css,scss}": [
    "prettier --write",
    "stylelint --fix",
    "git add"
  ],
  "*.{blade.php,html}": [
    "prettier --write",
    "htmllint",
    "textlint",
    "git add"
  ],
  "*.{yaml,yml,md}": [
    "prettier --write",
    "textlint",
    "git add"
  ]
}